<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scott Adams S2137174"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus Location Viewer"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Campus"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"

            android:id="@+id/btnNext"
            android:background="@drawable/button_style"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Campus"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnBack"
            android:layout_marginTop="5sp"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/reFreshbtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="refresh"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@drawable/button_style"/>
        <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/campusFlipper">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glasgow"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flag_of_scotland_svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/glasgowWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/glasgowButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/_280px_flag_of_the_united_states_svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/newYorkWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/newYorkButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="London"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flag_of_the_united_kingdom__1_2__svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/unitedKingdomWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/londonButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oman"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flag_of_oman_svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/omanWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/omanButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mauritius"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flag_of_mauritius_svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/mauritiusWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/mauritiusButton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bangladesh"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flag_of_bangladesh_svg"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:maxHeight="100dp"
                    android:maxWidth="150dp"/>
                <TextView
                    android:id="@+id/bangWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Press to view Current Weather"
                    android:textSize="22sp"
                    android:background="@drawable/button_style"
                    android:id="@+id/bangButton"/>
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>
</FrameLayout>